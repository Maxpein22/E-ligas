<com.google.android.flexbox.FlexboxLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    app:justifyContent="space_between"
    android:id="@+id/parentBtn"
    >

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="column_reverse"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/viewImageId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ambulance" />

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

        <!-- Description text outside the CardView -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description Text Goes Here"
            android:textColor="@color/black"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="space_between"
            >

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="column"
                >

                <TextView
                    android:id="@+id/txtUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="column"
                        >

                        <TextView
                            android:id="@+id/txtOrganizerLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organizer: "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txtStartDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date: "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txtEndDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Date: "
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            />


                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="column"
                        >



                        <TextView
                            android:id="@+id/txtOrganizerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kenneth"
                            android:textSize="12sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="2dp"
                            />
                        <TextView
                            android:id="@+id/txtStartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="January"
                            android:layout_marginTop="3dp"

                            android:textSize="12sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/txtEndDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="February"
                            android:layout_marginTop="3dp"

                            android:textSize="12sp"
                            android:maxWidth="250dp"
                            android:textColor="@color/black"
                            />

                    </com.google.android.flexbox.FlexboxLayout>
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    >

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flexDirection="column"
                        >



                    </com.google.android.flexbox.FlexboxLayout>


                    <!-- Add other details here if needed -->
                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.flexbox.FlexboxLayout>
            <Button
                android:id="@+id/verifyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOIN"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textSize="10sp"
                />
        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>


</com.google.android.flexbox.FlexboxLayout>
