<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:flexDirection="column"
    android:background="@color/splash_blue"
    android:padding="30dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify your Email"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:id="@+id/messageMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open your mail box and verify your email first"
        android:textSize="16dp"
        android:textAlignment="center"
        android:layout_marginVertical="15dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/resendEmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend Email Verification"
        app:layout_alignSelf="center"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="@color/splash_blue"
        />

    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Verified? Click here"
        app:layout_alignSelf="center"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/logOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Account"
        app:layout_alignSelf="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />


</com.google.android.flexbox.FlexboxLayout>